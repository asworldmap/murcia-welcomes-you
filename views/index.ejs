<div style="background: white; padding: var(--space-8) 0; margin-top: -100px;">
    <div class="container"
        style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: var(--space-6); align-items: center; text-align: left; padding-top: 100px;">
        <div class="animate-hero-text">
            <h1 style="font-size: 4rem; color: var(--text-main); margin-bottom: var(--space-3); line-height: 1.1;">
                <%= t('hero_title') %>
            </h1>
            <p style="font-size: 1.25rem; color: var(--text-soft); margin-bottom: var(--space-5);">
                <%= t('hero_subtitle') %>
            </p>
            <div style="display: flex; gap: var(--space-3); flex-wrap: wrap;">
                <a href="/calendar" class="btn">
                    <%= t('btn_view_calendar') %>
                </a>
                <a href="/activities" class="btn btn-soft">
                    Browse All Activities
                </a>
            </div>
        </div>
        <div class="animate-hero-img" style="position: relative;">
            <img src="/images/realistic_plaza.png" alt="Plaza de las Flores, Murcia"
                style="width: 100%; border-radius: var(--radius-lg); box-shadow: var(--shadow-hover);">
            <div class="card"
                style="position: absolute; bottom: -24px; right: -24px; max-width: 200px; padding: var(--space-3);">
                <div style="display: flex; align-items: center; gap: var(--space-2); margin-bottom: var(--space-1);">
                    <span style="font-size: 1.25rem;">üçã</span>
                    <span style="font-weight: 800; font-size: 0.85rem;">Local Soul</span>
                </div>
                <p style="font-size: 0.75rem; color: var(--text-soft);">Global community vibes from the heart of Murcia.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container" style="padding: var(--space-8) var(--space-4);">
    <div style="text-align: center; margin-bottom: var(--space-6);">
        <h2 style="font-size: 2.5rem; margin-bottom: var(--space-2);">
            <%= t('featured_activities') %>
        </h2>
        <p style="color: var(--text-soft);">Ready to jump in? Here's what's coming up next.</p>
    </div>

    <div class="grid">
        <% featuredActivities.forEach(event=> { %>
            <a href="/event/<%= event.id %>" class="card"
                style="display: flex; flex-direction: column; gap: var(--space-3);">
                <div style="display: flex; justify-content: space-between; align-items: start;">
                    <span style="font-size: 3rem;">
                        <%= event.emoji %>
                    </span>
                    <span class="badge badge-primary">
                        <%= event.category %>
                    </span>
                </div>
                <div>
                    <h3 style="font-size: 1.25rem; font-weight: 800; color: var(--text-main);">
                        <%= event.name %>
                    </h3>
                    <p
                        style="font-size: 0.9rem; color: var(--primary); font-weight: 700; margin-bottom: var(--space-2);">
                        <%= event.date %> @ <%= event.time %>
                    </p>
                </div>
                <p
                    style="font-size: 0.9rem; color: var(--text-soft); flex: 1; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; line-clamp: 3; overflow: hidden;">
                    <%= event.description %>
                </p>
                <div style="font-weight: 700; font-size: 0.85rem; color: var(--primary);">View Event ‚Üí</div>
            </a>
            <% }) %>
    </div>
</div>

<div style="background: var(--bg-soft); padding: var(--space-8) 0;">
    <div class="container">
        <h2 style="text-align: center; margin-bottom: var(--space-6);">Explore the Real Murcia</h2>
        <div class="gallery"
            style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: var(--space-4);">
            <div style="overflow: hidden; border-radius: var(--radius-md);">
                <img src="/images/murcia_cathedral.png" alt="Murcia Cathedral"
                    style="width: 100%; transition: var(--transition);" class="gallery-img">
            </div>
            <div style="overflow: hidden; border-radius: var(--radius-md);">
                <img src="/images/murcia_river.png" alt="Segura River"
                    style="width: 100%; transition: var(--transition);" class="gallery-img">
            </div>
            <div style="overflow: hidden; border-radius: var(--radius-md);">
                <img src="/images/murcia_huerta.png" alt="Traditional Murcia Huerta"
                    style="width: 100%; transition: var(--transition);" class="gallery-img">
            </div>
        </div>
    </div>
</div>

<style>
    .gallery-img:hover {
        transform: scale(1.05);
    }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
<script>
    gsap.from(".animate-hero-text", { opacity: 0, x: -50, duration: 1, ease: "power2.out" });
    gsap.from(".animate-hero-img", { opacity: 0, scale: 0.95, delay: 0.3, duration: 1.2 });
</script>