<div class="hero">
    <div class="container"
        style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 40px; align-items: center; text-align: left;">
        <div>
            <h1 class="animate-title" style="font-size: 3.5rem; color: var(--primary);">
                <%= t('hero_title') %>
            </h1>
            <p class="animate-subtitle" style="font-size: 1.2rem; color: var(--text-light); margin-bottom: 30px;">
                <%= t('hero_subtitle') %>
            </p>
            <div style="display: flex; gap: 20px;">
                <a href="/membership" class="btn">
                    <%= t('btn_get_pass') %>
                </a>
                <a href="/calendar" class="btn" style="background: var(--naif-mint); color: var(--primary);">
                    <%= t('btn_view_calendar') %>
                </a>
            </div>
        </div>
        <div class="animate-hero-img">
            <img src="/images/realistic_plaza.png" alt="Plaza de las Flores, Murcia"
                style="width: 100%; border-radius: var(--radius); box-shadow: var(--shadow);">
        </div>
    </div>
</div>

<div class="container">
    <h2 style="text-align: center; font-size: 2.5rem; margin-bottom: 40px; color: var(--primary);">
        <%= t('featured_activities') %>
    </h2>
    <div class="grid">
        <% featuredActivities.forEach(activity=> { %>
            <div class="card">
                <h3 class="card-title" style="color: var(--naif-orange);">
                    <%= activity.title %>
                </h3>
                <p style="font-size: 0.9rem; color: var(--text-light); margin-bottom: 15px;">ğŸ•’ <%= activity.time %> |
                        ğŸ“ <%= activity.location %>
                </p>
                <p>
                    <%= activity.description %>
                </p>
                <a href="/activities/<%= activity.slug %>" class="btn"
                    style="margin-top: 20px; padding: 8px 20px; font-size: 0.9rem;">See details</a>
            </div>
            <% }) %>
    </div>
</div>

<div style="background: var(--naif-yellow); padding: 80px 20px; margin: 60px 0; border-radius: 80px;">
    <div class="container">
        <h3 style="text-align: center; margin-bottom: 50px;">Moments from Murcia</h3>
        <div class="gallery">
            <img src="/images/realistic_walking.png" alt="Expats in Murcia" class="gallery-img">
            <img src="/images/naif_picnic.png" alt="Picnic in the orchard" class="gallery-img">
            <img src="/images/realistic_plaza.png" alt="Plaza de las Flores" class="gallery-img">
            <img src="/images/naif_sunset.png" alt="Murcia sunset" class="gallery-img">
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
<script>
    gsap.from(".animate-title", { opacity: 0, x: -50, duration: 1, ease: "power2.out" });
    gsap.from(".animate-subtitle", { opacity: 0, x: -50, delay: 0.2, duration: 1 });
    gsap.from(".animate-hero-img", { opacity: 0, scale: 0.9, delay: 0.4, duration: 1.2, ease: "elastic.out(1, 0.75)" });
</script>