<!DOCTYPE html>
<html lang="<%= lang %>">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> | Murcia Welcomes You
    </title>

    <!-- SEO Meta Tags -->
    <meta name="description"
        content="Join Murcia Welcomes You for social activities, hiking, sports, and cultural events in Murcia, Spain. Connect with expats and locals. Free to join, pay as you go.">
    <meta name="keywords"
        content="Murcia activities, expat Murcia, things to do Murcia, social events Murcia, hiking Murcia, community Murcia, international Murcia">
    <meta name="author" content="Asensio Sabater L√≥pez-Guill√©n">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="https://murciawelcomesyou.com">

    <meta property="og:title" content="Murcia Welcomes You - January Reset 2026">
    <meta property="og:description" content="<%= t('hero_subtitle') %>">
    <meta property="og:image" content="https://murciawelcomesyou.com/images/logo.png">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://murciawelcomesyou.com">
    <meta name="twitter:card" content="summary_large_image">

    <!-- Schema.org -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Murcia Welcomes You",
        "description": "Community activities for expats and locals in Murcia",
        "url": "https://murciawelcomesyou.com",
        "foundingDate": "2023",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "Murcia",
            "addressCountry": "ES"
        }
    }
    </script>

    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/png" href="/images/logo.png">
</head>

<body>
    <header>
        <div class="nav-container">
            <a href="/" class="logo-wrapper">
                <img src="/images/logo.png" alt="MWY Logo" class="logo-img">
                <div class="logo-text">MWY<span>2026</span></div>
            </a>

            <!-- Hamburger Menu Button -->
            <button class="hamburger" id="hamburger" aria-label="Toggle menu">
                <span></span>
                <span></span>
                <span></span>
            </button>

            <nav id="nav-menu">
                <ul>
                    <li><a href="/?lang=<%= lang %>" class="<%= title === t('nav_home') ? 'active' : '' %>">
                            <%= t('nav_home') %>
                        </a></li>
                    <li><a href="/activities?lang=<%= lang %>"
                            class="<%= title.includes('Activity') || title.includes('Activities') ? 'active' : '' %>">
                            <%= t('nav_activities') %>
                        </a></li>
                    <li><a href="/calendar?lang=<%= lang %>"
                            class="<%= title.includes(t('nav_calendar')) ? 'active' : '' %>">
                            <%= t('nav_calendar') %>
                        </a></li>
                    <li><a href="/membership?lang=<%= lang %>"
                            class="<%= title.includes(t('nav_membership')) ? 'active' : '' %>">
                            <%= t('nav_membership') %>
                        </a></li>
                    <li><a href="/about?lang=<%= lang %>" class="<%= title === t('nav_story') ? 'active' : '' %>">
                            <%= t('nav_story') %>
                        </a></li>
                </ul>
                <div class="lang-switcher">
                    <a href="?lang=en" style="font-weight: <%= lang === 'en' ? '700' : '400' %>">EN</a> |
                    <a href="?lang=es" style="font-weight: <%= lang === 'es' ? '700' : '400' %>">ES</a>
                </div>
            </nav>
        </div>
    </header>

    <script>
        // Mobile menu toggle
        const hamburger = document.getElementById('hamburger');
        const navMenu = document.getElementById('nav-menu');

        hamburger.addEventListener('click', () => {
            hamburger.classList.toggle('active');
            navMenu.classList.toggle('active');
        });

        // Close menu when clicking outside
        document.addEventListener('click', (e) => {
            if (!hamburger.contains(e.target) && !navMenu.contains(e.target)) {
                hamburger.classList.remove('active');
                navMenu.classList.remove('active');
            }
        });

        // Close menu when clicking a link
        navMenu.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                hamburger.classList.remove('active');
                navMenu.classList.remove('active');
            });
        });
    </script>

    <main>
        <%- body %>
    </main>

    <footer>
        <div class="container"
            style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 40px; text-align: left;">
            <div>
                <h3 style="margin-bottom: 15px;">Murcia Welcomes You - V2.0 - [Ruta: ROOT]</h3>
                <p style="font-size: 0.9rem; opacity: 0.8;">
                    <%= t('hero_subtitle') %>
                </p>
            </div>
            <div>
                <h3 style="font-size: 2rem;">üçã</h3>
                <p style="font-weight: 700;">Global mentality, local accent.</p>
            </div>
        </div>
    </footer>
</body>

</html>