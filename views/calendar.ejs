<div class="container">
    <div style="text-align: center; margin-bottom: 3rem;">
        <h1 style="color: var(--secondary); font-size: 3rem;">January 2026</h1>
        <p style="color: var(--text-light);">Our program officially begins on January 5th.</p>
    </div>

    <div class="calendar-grid">
        <div class="calendar-header">Mon</div>
        <div class="calendar-header">Tue</div>
        <div class="calendar-header">Wed</div>
        <div class="calendar-header">Thu</div>
        <div class="calendar-header">Fri</div>
        <div class="calendar-header">Sat</div>
        <div class="calendar-header">Sun</div>

        <% for(let i=0; i < 3; i++) { %>
            <div class="calendar-day muted"></div>
            <% } %>

                <% for(let day=1; day <=31; day++) { const isMuted=(day < 5); const
                    dayActivities=activities.filter(function(a) { return a.days.includes(day); }); %>
                    <div class="calendar-day <%= isMuted ? 'muted' : '' %>">
                        <div class="day-number">
                            <%= day %>
                        </div>
                        <% dayActivities.forEach(function(activity) { %>
                            <a href="/activities/<%= activity.slug %>" class="activity-tag">
                                <%= activity.time %> - <%= activity.title %>
                            </a>
                            <% }) %>
                    </div>
                    <% } %>
    </div>
</div>